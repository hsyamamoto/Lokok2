NODE_ENV=production
PORT=${PORT}
SESSION_SECRET=change-me-in-production

# Force local Excel to mirror development data source
FORCE_LOCAL_EXCEL=1
EXCEL_PATH=./data/cached_spreadsheet.xlsx

# Optional: Postgres connection (if using DB features)
DATABASE_URL=postgresql://user:password@host:port/dbname?sslmode=require

# Optional: Google Drive (disabled when FORCE_LOCAL_EXCEL=1)
GOOGLE_DRIVE_FILE_ID=
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=

# Build/Deploy metadata (Railway populates automatically when connected)
RAILWAY_GIT_COMMIT_SHA=
RAILWAY_GIT_BRANCH=
RAILWAY_GIT_REPO=