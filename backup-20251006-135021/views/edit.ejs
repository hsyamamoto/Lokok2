<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Distributor - LOKOK System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@300;400;500;600;700&family=Geist+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'sans': ['Geist', 'system-ui', 'sans-serif'],
                        'mono': ['Geist Mono', 'monospace']
                    },
                    fontSize: {
                        'base': '16px'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 font-sans text-base">
    <!-- Navbar -->
    <nav class="bg-gradient-to-r from-sky-200 to-blue-200 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/dashboard" class="text-xl font-semibold text-blue-800 hover:text-blue-900 transition-colors duration-200">
                        <i class="fas fa-chart-line mr-2"></i>
                        LOKOK System
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-sm text-blue-700">
                        Welcome, <span class="font-medium"><%= user.name %></span>
                    </span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                        <%= user.role %>
                    </span>
                    <div class="relative group">
                        <button class="text-sm text-blue-700 hover:text-blue-900 transition-colors duration-200 flex items-center">
                            <i class="fas fa-user mr-1"></i>
                            Menu
                            <i class="fas fa-chevron-down ml-1 text-xs"></i>
                        </button>
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                            <div class="py-1">
                                <a href="/dashboard" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                                    <i class="fas fa-tachometer-alt mr-2"></i>
                                    Dashboard
                                </a>
                                <a href="/search" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                                    <i class="fas fa-search mr-2"></i>
                                    Search
                                </a>
                                <% if (user.role === 'admin') { %>
                                    <a href="/form" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                                        <i class="fas fa-plus mr-2"></i>
                                        Add
                                    </a>
                                    <a href="/users" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                                        <i class="fas fa-users mr-2"></i>
                                        Users
                                    </a>
                                <% } %>
                                <div class="border-t border-gray-100"></div>
                                <a href="/logout" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors duration-200">
                                    <i class="fas fa-sign-out-alt mr-2"></i>
                                    Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">
                        <i class="fas fa-edit mr-3 text-blue-600"></i>
                        Edit Distributor
                    </h1>
                    <p class="text-gray-600">Update distributor information</p>
                </div>
                <a href="/search" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-200">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Search
                </a>
            </div>
        </div>

        <!-- Alert Container -->
        <div id="alertContainer" class="mb-6"></div>

        <!-- Form -->
        <form id="editForm" class="bg-white rounded-xl shadow-lg p-8">
            <input type="hidden" id="recordId" value="<%= recordId %>">
            
            <!-- Basic Information -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-info-circle mr-2 text-blue-600"></i>
                    Basic Information
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-building mr-1"></i>
                            Company Name *
                        </label>
                        <input type="text" id="name" name="name" required
                               value="<%= record.Name || '' %>"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                    </div>
                    <div>
                        <label for="website" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-globe mr-1"></i>
                            Website
                        </label>
                        <input type="url" id="website" name="website"
                               value="<%= record.Website || '' %>"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                    </div>
                    <div>
                        <label for="categoria" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-tags mr-1"></i>
                            Category
                        </label>
                        <input type="text" id="categoria" name="categoria"
                               value="<%= record['CATEGORÃA'] || '' %>"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                    </div>
                    <div>
                        <label for="responsable" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-user-tie mr-1"></i>
                            Manager
                        </label>
                        <input type="text" id="responsable" name="responsable"
                               value="<%= record.Responsable || '' %>"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200"
                               placeholder="Manager name">
                    </div>
                </div>
            </div>

            <!-- Status -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-chart-bar mr-2 text-green-600"></i>
                    Status
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="accountRequestStatus" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-clipboard-check mr-1"></i>
                            Account Request Status
                        </label>
                        <select id="accountRequestStatus" name="accountRequestStatus"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                            <option value="">Select...</option>
                            <option value="Pending" <%= (record['Account Request Status'] === 'Pending') ? 'selected' : '' %>>Pending</option>
                            <option value="Approved" <%= (record['Account Request Status'] === 'Approved') ? 'selected' : '' %>>Approved</option>
                            <option value="Rejected" <%= (record['Account Request Status'] === 'Rejected') ? 'selected' : '' %>>Rejected</option>
                        </select>
                    </div>
                    <div>
                        <label for="generalStatus" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-flag mr-1"></i>
                            General Status
                        </label>
                        <select id="generalStatus" name="generalStatus"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                            <option value="">Select...</option>
                            <option value="Active" <%= (record['General Status'] === 'Active') ? 'selected' : '' %>>Active</option>
                            <option value="Inactive" <%= (record['General Status'] === 'Inactive') ? 'selected' : '' %>>Inactive</option>
                            <option value="Suspended" <%= (record['General Status'] === 'Suspended') ? 'selected' : '' %>>Suspended</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-address-book mr-2 text-purple-600"></i>
                    Contact Information
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label for="contactName" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-user mr-1"></i>
                            Contact Name
                        </label>
                        <input type="text" id="contactName" name="contactName"
                               value="<%= record['Contact Name'] || '' %>"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                    </div>
                    <div>
                        <label for="contactEmail" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-envelope mr-1"></i>
                            Contact Email
                        </label>
                        <input type="email" id="contactEmail" name="contactEmail"
                               value="<%= record['Contact Email'] || '' %>"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                    </div>
                    <div>
                        <label for="contactPhone" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-phone mr-1"></i>
                            Contact Phone
                        </label>
                        <input type="tel" id="contactPhone" name="contactPhone"
                               value="<%= record['Contact Phone'] || '' %>"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                    </div>
                </div>
            </div>

            <!-- Address -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-map-marker-alt mr-2 text-red-600"></i>
                    Address
                </h2>
                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label for="address" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-road mr-1"></i>
                            Address
                        </label>
                        <input type="text" id="address" name="address"
                               value="<%= record.Address || '' %>"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        <div>
                            <label for="city" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-city mr-1"></i>
                                City
                            </label>
                            <input type="text" id="city" name="city"
                                   value="<%= record.City || '' %>"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                        </div>
                        <div>
                            <label for="state" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-map mr-1"></i>
                                State
                            </label>
                            <input type="text" id="state" name="state"
                                   value="<%= record.State || '' %>"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                        </div>
                        <div>
                            <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-flag mr-1"></i>
                                Country
                            </label>
                            <input type="text" id="country" name="country"
                                   value="<%= record.Country || '' %>"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                        </div>
                        <div>
                            <label for="zipCode" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-mail-bulk mr-1"></i>
                                ZIP Code
                            </label>
                            <input type="text" id="zipCode" name="zipCode"
                                   value="<%= record['Zip Code'] || '' %>"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-colors duration-200">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a href="/search" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-200 flex items-center">
                    <i class="fas fa-times mr-2"></i>
                    Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-lg hover:from-blue-600 hover:to-blue-700 transition-all duration-200 flex items-center shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                    <i class="fas fa-save mr-2"></i>
                    Save Changes
                </button>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('editForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const recordId = document.getElementById('recordId').value;
            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());
            
            // Mostrar loading
            const submitButton = this.querySelector('button[type="submit"]');
            const originalContent = submitButton.innerHTML;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Saving...';
            submitButton.disabled = true;
            
            try {
                const response = await fetch(`/edit/${recordId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showAlert('success', result.message);
                    setTimeout(() => {
                        window.location.href = '/search';
                    }, 1500);
                } else {
                    showAlert('error', result.message);
                }
            } catch (error) {
                showAlert('error', 'Error saving changes. Please try again.');
            } finally {
                submitButton.innerHTML = originalContent;
                submitButton.disabled = false;
            }
        });
        
        function showAlert(type, message) {
            const alertContainer = document.getElementById('alertContainer');
            const alertClass = type === 'success' ? 'bg-green-50 border-green-200 text-green-700' : 'bg-red-50 border-red-200 text-red-700';
            const iconClass = type === 'success' ? 'fas fa-check-circle text-green-500' : 'fas fa-exclamation-triangle text-red-500';
            
            alertContainer.innerHTML = `
                <div class="${alertClass} border rounded-lg p-4">
                    <div class="flex items-center">
                        <i class="${iconClass} mr-3"></i>
                        <p class="font-medium">${message}</p>
                    </div>
                </div>
            `;
            
            // Auto-hide success alerts
            if (type === 'success') {
                setTimeout(() => {
                    alertContainer.innerHTML = '';
                }, 3000);
            }
        }
    </script>
</body>
</html>