<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Record - LOKOK System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@300;400;500;600;700&family=Geist+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'sans': ['Geist', 'system-ui', 'sans-serif'],
                        'mono': ['Geist Mono', 'monospace']
                    },
                    fontSize: {
                        'base': '16px'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 font-sans text-base">
    <!-- Navbar -->
    <nav class="bg-gradient-to-r from-sky-200 to-blue-200 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/dashboard" class="text-xl font-semibold text-blue-800 hover:text-blue-900 transition-colors duration-200">
                        <i class="fas fa-chart-line mr-2"></i>
                        LOKOK System
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-sm text-blue-700">
                        Welcome, <span class="font-medium"><%= user.name %></span>
                    </span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                        <%= user.role %>
                    </span>
                    <div class="relative group">
                        <button class="text-sm text-blue-700 hover:text-blue-900 transition-colors duration-200 flex items-center">
                            <i class="fas fa-user mr-1"></i>
                            Menu
                            <i class="fas fa-chevron-down ml-1 text-xs"></i>
                        </button>
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                            <div class="py-1">
                                <a href="/dashboard" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                                    <i class="fas fa-tachometer-alt mr-2"></i>
                                    Dashboard
                                </a>
                                <a href="/search" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                                    <i class="fas fa-search mr-2"></i>
                                    Search
                                </a>
                                <% if (user && user.role === 'admin') { %>
                                <a href="/users" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                                    <i class="fas fa-users mr-2"></i>
                                    Users
                                </a>
                                <% } %>
                                <hr class="my-1">
                                <a href="/logout" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                                    <i class="fas fa-sign-out-alt mr-2"></i>
                                    Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
                <i class="fas fa-plus mr-3 text-sky-500"></i>
                Add New Record
            </h1>
            <p class="text-base text-gray-600">Fill in the fields below to add a new supplier to the system</p>
        </div>



        <!-- Individual Record Form -->
        <div class="bg-white rounded-xl shadow-lg p-8">
            <div class="mb-6">
                <h2 class="text-2xl font-bold text-gray-900 mb-2">
                    <i class="fas fa-plus mr-3 text-sky-500"></i>
                    Add Individual Record
                </h2>
                <p class="text-gray-600">Or add a single supplier using the form below</p>
            </div>
            <form id="recordForm" class="space-y-6">
                <!-- Basic Information -->
                <div class="border-b border-gray-200 pb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">
                        <i class="fas fa-building mr-2 text-sky-500"></i>
                        Basic Information
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Company Name -->
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-building mr-2 text-gray-500"></i>
                                Company Name <span class="text-sky-500">*</span>
                            </label>
                            <input type="text" id="name" name="name" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-300 focus:border-sky-300 transition-colors duration-200">
                        </div>
                        
                        <!-- Website -->
                        <div>
                            <label for="website" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-globe mr-2 text-gray-500"></i>
                                Website
                            </label>
                            <input type="url" id="website" name="website" placeholder="https://example.com"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-300 focus:border-sky-300 transition-colors duration-200 font-mono text-sm">
                        </div>
                        
                        <!-- Categoria -->
                        <div>
                            <label for="categoria" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-tags mr-2 text-gray-500"></i>
                                Category <span class="text-sky-500">*</span>
                            </label>
                            <input type="text" id="categoria" name="categoria" required
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200">
                        </div>
                        
                        <!-- Account Request Status -->
                        <div>
                            <label for="accountStatus" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-user-check mr-2 text-gray-500"></i>
                                Account Status
                            </label>
                            <select id="accountStatus" name="accountStatus"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-300 focus:border-sky-300 transition-colors duration-200">
                                <option value="">Select...</option>
                                <option value="APPROVED">APPROVED</option>
                                <option value="NOT APPROVED">NOT APPROVED</option>
                                <option value="PENDING">PENDING</option>
                            </select>
                        </div>
                        
                        <!-- Date -->
                        <div>
                            <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-calendar mr-2 text-gray-500"></i>
                                Date
                            </label>
                            <input type="date" id="date" name="date"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200">
                        </div>
                        
                        <!-- Manager -->
                        <div>
                            <label for="responsable" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-user-tie mr-2 text-gray-500"></i>
                                Manager
                            </label>
                            <input type="text" id="responsable" name="responsable"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200">
                        </div>
                    </div>
                    
                    <!-- Status -->
                    <div class="mt-6">
                        <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-flag mr-2 text-gray-500"></i>
                            Status
                        </label>
                        <select id="status" name="status"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-300 focus:border-sky-300 transition-colors duration-200">
                            <option value="">Select...</option>
                            <option value="PENDING APPROVAL">PENDING APPROVAL</option>
                            <option value="BUYING">BUYING</option>
                            <option value="CHECKING">CHECKING</option>
                            <option value="NOT COMPETITIVE">NOT COMPETITIVE</option>
                            <option value="NOT INTERESTING">NOT INTERESTING</option>
                            <option value="RED FLAG">RED FLAG</option>
                        </select>
                    </div>
                    
                    <!-- Description/Notes -->
                    <div class="mt-6">
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-sticky-note mr-2 text-gray-500"></i>
                            Description/Notes
                        </label>
                        <textarea id="description" name="description" rows="3"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-300 focus:border-sky-300 transition-colors duration-200 resize-none"></textarea>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="border-b border-gray-200 pb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">
                        <i class="fas fa-address-book mr-2 text-emerald-400"></i>
                        Contact Information
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Contact Name -->
                        <div>
                            <label for="contactName" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-user mr-2 text-gray-500"></i>
                                Contact Name
                            </label>
                            <input type="text" id="contactName" name="contactName"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-300 focus:border-emerald-300 transition-colors duration-200">
                        </div>
                        
                        <!-- Phone -->
                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-phone mr-2 text-gray-500"></i>
                                Phone
                            </label>
                            <input type="tel" id="phone" name="phone"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-300 focus:border-emerald-300 transition-colors duration-200 font-mono">
                        </div>
                        
                        <!-- Email -->
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-envelope mr-2 text-gray-500"></i>
                                Email
                            </label>
                            <input type="email" id="email" name="email"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200 font-mono">
                        </div>
                        
                        <!-- Address -->
                        <div>
                            <label for="address" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-map-marker-alt mr-2 text-gray-500"></i>
                                Address
                            </label>
                            <input type="text" id="address" name="address"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors duration-200">
                        </div>
                    </div>
                </div>

                <!-- Access Information -->
                <div class="border-b border-gray-200 pb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">
                        <i class="fas fa-key mr-2 text-violet-400"></i>
                        Access Information
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Registered User -->
                        <div>
                            <label for="user" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-user-plus mr-2 text-gray-500"></i>
                                Registered User
                            </label>
                            <input type="text" id="user" name="user"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-violet-300 focus:border-violet-300 transition-colors duration-200 font-mono">
                        </div>
                        
                        <!-- Registered Password -->
                        <div>
                            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-key mr-2 text-gray-500"></i>
                                Registered Password
                            </label>
                            <input type="password" id="password" name="password"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200 font-mono">
                        </div>
                    </div>
                </div>

                <!-- Additional Settings -->
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">
                        <i class="fas fa-cogs mr-2 text-amber-400"></i>
                        Additional Settings
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- LLAMAR -->
                        <div>
                            <label for="llamar" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-phone-alt mr-2 text-gray-500"></i>
                                LLAMAR
                            </label>
                            <input type="text" id="llamar" name="llamar"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-300 focus:border-amber-300 transition-colors duration-200">
                        </div>
                        
                        <!-- Priority -->
                        <div>
                            <label for="prioridade" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-sort-numeric-down mr-2 text-gray-500"></i>
                                Priority (1 - TOP, 5 - Very Low)
                            </label>
                            <select id="prioridade" name="prioridade"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-300 focus:border-amber-300 transition-colors duration-200">
                                <option value="">Select...</option>
                                <option value="1">1 - TOP</option>
                                <option value="2">2 - High</option>
                                <option value="3">3 - Medium</option>
                                <option value="4">4 - Low</option>
                                <option value="5">5 - Very Low</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Comments -->
                    <div class="mt-6">
                        <label for="comments" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-comments mr-2 text-gray-500"></i>
                            Comments
                        </label>
                        <textarea id="comments" name="comments" rows="3"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-300 focus:border-amber-300 transition-colors duration-200 resize-none"></textarea>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6">
                    <button type="submit" class="flex items-center justify-center px-6 py-3 bg-gradient-to-r from-sky-300 to-sky-400 text-sky-800 text-base font-medium rounded-lg hover:from-sky-400 hover:to-sky-500 transition-all duration-200 shadow-md hover:shadow-lg">
                        <i class="fas fa-save mr-2"></i>
                        Save Record
                    </button>
                    <a href="/dashboard" class="flex items-center justify-center px-6 py-3 bg-gradient-to-r from-slate-300 to-slate-400 text-slate-800 text-base font-medium rounded-lg hover:from-slate-400 hover:to-slate-500 transition-all duration-200 shadow-md hover:shadow-lg">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Dashboard
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Success Modal -->
    <div id="successModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-xl shadow-2xl max-w-md w-full mx-4">
            <div class="bg-gradient-to-r from-emerald-300 to-emerald-400 text-emerald-800 p-6 rounded-t-xl">
                <h3 class="text-xl font-semibold flex items-center">
                    <i class="fas fa-check-circle mr-2"></i>
                    Success!
                </h3>
            </div>
            <div class="p-6">
                <p id="successMessage" class="text-base text-gray-700">Record added successfully!</p>
            </div>
            <div class="p-6 pt-0 flex justify-end">
                <button onclick="closeModal('successModal')" class="px-4 py-2 bg-emerald-300 text-emerald-800 rounded-lg hover:bg-emerald-400 transition-colors duration-200">
                    OK
                </button>
            </div>
        </div>
    </div>

    <!-- Error Modal -->
    <div id="errorModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-xl shadow-2xl max-w-md w-full mx-4">
            <div class="bg-gradient-to-r from-rose-300 to-rose-400 text-rose-800 p-6 rounded-t-xl">
                <h3 class="text-xl font-semibold flex items-center">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    Error!
                </h3>
            </div>
            <div class="p-6">
                <p id="errorMessage" class="text-base text-gray-700">An error occurred while saving the record.</p>
            </div>
            <div class="p-6 pt-0 flex justify-end">
                <button onclick="closeModal('errorModal')" class="px-4 py-2 bg-rose-300 text-rose-800 rounded-lg hover:bg-rose-400 transition-colors duration-200">
                    OK
                </button>
            </div>
        </div>
    </div>

    <script>
        function closeModal(modalId) {
            document.getElementById(modalId).classList.add('hidden');
        }

        // Individual record form handler
        document.getElementById('recordForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/add-record', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    document.getElementById('successMessage').textContent = result.message;
                    document.getElementById('successModal').classList.remove('hidden');
                    this.reset(); // Limpar formulário
                } else {
                    document.getElementById('errorMessage').textContent = result.message;
                    document.getElementById('errorModal').classList.remove('hidden');
                }
            } catch (error) {
                document.getElementById('errorMessage').textContent = 'Connection error. Please try again.';
                document.getElementById('errorModal').classList.remove('hidden');
            }
        });


    </script>
</body>
</html>